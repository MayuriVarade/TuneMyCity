<%= javascript_include_tag "jquery-1.5.2.min","jquery.validate.min","validation" %>
<div class="container">
	<div class="row">

			<%= form_tag sessions_path, :class=>"form-signin mg-btm", :id=>"log_in" do %>
    	<h3 class="heading-desc">

		Login to Tune My City</h3>
		<div class="social-box">
			<div class="row mg-btm">
             <div class="col-md-12">
                <a href="/auth/facebook" class="btn btn-primary btn-block">
                  <i class="icon-facebook"></i>    Login with Facebook
                </a>
			</div>
			</div>
			<div class="row">
			<div class="col-md-12">
                <a href="/auth/twitter" class="btn btn-info btn-block" >
                  <i class="icon-twitter"></i>    Login with Twitter
                </a>
            </div>
          </div>

          <div class="row">
			<div class="col-md-12"><br>
                <a href="/auth/google_oauth2" class="btn btn-danger btn-block" >
                  <i class="icon-twitter"></i>    Login with Google Plus
                </a>
            </div>
          </div>
		</div>
		<div class="main" align="left">	
            <%= text_field_tag :email, params[:email], :placeholder=>"Email",:style=>"width:250px"  %></p>
            <%= password_field_tag :password%>
		
		 
        <!-- Are you a business? <a href=""> Get started here</a> -->
		<span class="clearfix"></span>	
        </div>
		<div class="login-footer">
		<div class="row">
                        <div class="col-xs-6 col-md-6">
                            <div class="left-section" align="left">
                      <p><%= link_to "Forgot your password?", new_password_reset_path %></p>
								
								<%= link_to "Sign up", sign_up_path%>
							</div>
                        </div>
                        <div class="col-xs-6 col-md-6 pull-right"  align="right">
                            <button type="submit" class="btn btn-large btn-danger pull-right">Login</button>
                        </div>
                    </div>
		
		</div>
    <%end%>
	</div>
</div>
