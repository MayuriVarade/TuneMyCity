 <%= javascript_include_tag "jquery-1.5.2.min","jquery.validate.min","validation" %>
 <%= javascript_include_tag "initiatives.js.coffee" %>
<%#= render 'layouts/header'%>
<section id="main">
 


  <div class="wrap group">

    <div class="inner-container half group">

      <div class="box-hold group">
        <article class="post-6 page type-page status-publish hentry entry box" id="post-6">
          <div class="entry-intro">
            <h1>Post an Initiative</h1>
          </div> <!-- .entry-intro -->

          <div class="entry-content group">

          <p>Hello, don't hesitate to contact me via this marvelous contact form!</p>

   

            <%= form_for(@initiative,:html => {:id => "contactform" }) do |f| %>
     
               <div class="field">
                <%= f.collection_select :initiative_category, Category.all, :category, :category, {prompt: "Category"}, :class=>"alignleft" %></br> </br>
               
              <%#= f.text_field :initiative_category,:placeholder=>"Initiative Category" %>
              </div>
              
             <div class="field">

                     <br>
                     <div align="left">
                     Select Country State and City
                    </div>  
                     <br>
            <%= f.collection_select :country_id, Country.order(:name), :id, :name, {prompt: " --Select Country--"}, :class=>"alignleft"%><br />
              </div>
              <div class="field">
                <br />
                <%= f.grouped_collection_select :state_id, Country.order(:name), :states, :name, :id, :name, {prompt: "State"}, :class=>"alignleft"%><br />
              </div>
              <div class="field">
              <br />
              <%= f.grouped_collection_select :city_id, State.order(:name),:cities, :name, :id, :city_name,{prompt: "City"}, :class=>"alignleft"%><br />
             </div>
           <br>
              <p>
                 <%= f.text_field :initiative_name,:placeholder=>"Title" %>
              </p>
              <p>
                  <%= f.text_area :initiative_description,:placeholder=>"Description" %>
                  <%= f.hidden_field :user_id,:value => current_user2.id%>
                  
              </p>
           <br>
              <p>
                <%= f.file_field :image, :class=>"alignleft" %>
              </p>
        

             <p align="right"><%= f.submit "Post", :class=>"btn btn-info"%></p>
           <% end %>
         <!--  </form> -->

          </div>

          <div class="social-share group">

          </div>

        </article>
      </div> <!-- .box-hold -->


    </div>

  </div> <!-- .wrap < #main -->
</section> <!--  #main -->


















































