

<div class="container">
  <div class="row">
    
      <%= form_for @user, html: {:class => "form-signin mg-btm"} do |f|  %>
      <h3 class="heading-desc">
   
    Please Select Your Country State and City</h3>

    <div class="main" align="left"> 
       <td align="right" valign="top">Country :</td>
        <%= f.collection_select :country_id, Country.order(:name), :id, :name, include_blank: true%>
           <td align="right" valign="top">State:</td>
         <%= f.grouped_collection_select :state_id, Country.order(:name), :states, :name, :id, :name, include_blank: true%>
             <td align="right" valign="top">City:</td>
        <%= f.grouped_collection_select :city_id, State.order(:name),:cities, :name, :id, :city_name,{:include_blank => true}%>
       
       <!--  Are you a business? <a href=""> Get started here</a> -->
    <span class="clearfix"></span>  
        </div>
    <div class="login-footer">
    <div class="row">

      <div class="col-xs-6 col-md-6 pull-right">
         <%= f.submit "update" ,:class=>"btn btn-large btn-danger pull-right"%>
      
      </div>
      </div>
    
    </div>
    <% end %>
    
  </div>
</div>

