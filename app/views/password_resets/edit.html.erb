<%= javascript_include_tag "jquery-1.5.2.min","jquery.validate.min","validation" %>
<div class="container">
  <div class="row">
<%= form_for @user, :url => password_reset_path(params[:id]),:html => {:class => "form-signin mg-btm", :id=>"change_password" } do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages"></br>
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li></br>
        <% end %>
      </ul>
    </div>
  <% end %>
   
      <h3 class="heading-desc">

    Pick a new password</h3>
    
    <div class="main" align="left"> 
      <label for="name">New Password</label>
            <%= f.password_field :password %></p>
            <label for="name">Type it again</label>
           <%= f.password_field :password_confirmation %>
    
     
        <!-- Are you a business? <a href=""> Get started here</a> -->
    <span class="clearfix"></span>  
        </div>
    <div class="login-footer">
    <div class="row">
                        <div class="col-xs-6 col-md-6">
                      
                        </div>
                        <div class="col-xs-6 col-md-6 pull-right"  align="right">
                          <%= f.submit "Update Password",:class=>"btn btn-large btn-danger pull-right" %>
                         
                           
                        </div>
                    </div>
    
    </div>
    <%end%>
  </div>
</div>
